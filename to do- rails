<script>
$(document).on('click', '.fa-phone', function() {
  alert("Hello");
  $.ajax({
    traditional: true,
    type: "POST",
    beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
    url: "/check_role",
    dataType: 'json',
    data: ""
    }).done(function (data) {
      console.log(data);
    }).fail(function () {
      console.log("error");
    })
});
</script>


