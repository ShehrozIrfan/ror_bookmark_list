var date, day, elm;
        console.log(e.target);
        elm = $(e.target);
        day = elm.text();
        date = elm.closest('#calendarWrap').find('.date-heading').text();
        $('#currentDate').text(day + ' ' + date);
        $('#meetingDate').val(day + ' ' + date);

</script>









