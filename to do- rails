$(".start-time").val('');
$(".end-time").val('');


$('.btn_cancel').click(function() {
      alert("Hi");
      var time_start = $('.start-time').val();
      var time_end = $('.end-time').val();

      alert(time_start);
      alert(time_end);

      time_start = '';
      time_end = '';

      alert(time_start);
      alert(time_end);
     

    });
    
    
    
